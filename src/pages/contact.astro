---
import BaseLayout from "src/layouts/BaseLayout.astro";
import client from "@data/client.json";
import Landing from "@components/Landing.astro";

---

<BaseLayout
  title="Contact"
  description="Meta description for the page"
>

<section id="header" class="header">
  <div class="container">
    <div class="grid">
      <div class="text-box">
          <h1 class="heading-box">
              Contact
          </h1>
        </div>
        <img
          class="image"
          src="/assets/images/contact.jpg"
          alt="RideKola skyline at night"
        />
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
      <div class="grid">
          <div class="text-box">
              <h2>
                  Contact us to discuss what a partnership with your organisation might look like.<br>
                  <br>
                  Come and see RideKola in action and find out if we are the right fit.
              </h2>
          </div>
          <form name="ridekola-contact" netlify>
              <div class="form-grid">
                  <div>
                      <label for="first-name">First name</label>
                      <input type="text" name="first-name" id="first-name" autocomplete="given-name">
                  </div>
                  <div>
                      <label for="last-name">Last name</label>
                      <input type="text" name="last-name" id="last-name" autocomplete="family-name">
                  </div>
                  <div class="full-width">
                      <label for="email">Email</label>
                      <input type="email" name="email" id="email" autocomplete="email">
                  </div>
                  <div class="full-width">
                      <label for="company">Company</label>
                      <input type="text" name="company" id="company" autocomplete="organization">
                  </div>
                  <div class="full-width">
                      <label for="phone">Phone</label>
                      <span class="optional">Optional</span>
                      <input type="tel" name="phone" id="phone" autocomplete="tel">
                  </div>
                  <div class="full-width">
                      <label for="message">How can we help you?</label>
                      <span class="optional">Max 500 characters</span>
                      <textarea id="message" name="message" rows="4" maxlength="500"></textarea>
                  </div>
              </div>
              <button type="submit">Submit</button>
          </form>
      </div>
  </div>
</section>
</BaseLayout>

<style>
  #header {
      background-color: #fff;
  
      .container {
          width: 90%;
          max-width: 2500px;
          margin-left: auto;
          margin-right: auto;
          padding: 2rem 2rem 1rem;
      }
  
      .grid {
          display: grid;
          grid-template-columns: 1fr;
          gap: 1rem;
          align-items: end;
      }
  
      .text-box {
          background-color: #445c5e; 
          padding: 4rem;
          height: 100%;
          border-radius: 1rem;
          display: flex;
          flex-direction: column;
          justify-content: center;
      }
  
      .text-box h1 {
          font-size: 1.875rem;
          line-height: 2.25rem;
          letter-spacing: -0.025em;
          font-weight: bold;
          color: white;
          text-align: left;
      }
  
      .image {
          aspect-ratio: 4/1;
          object-fit: cover;
          border-radius: 16px;
          height: 100%;
          width: 100%;
      }
  
      @media screen and (min-width: 768px) {
          .container {
              padding-top: 8rem;
              padding-left: 1rem;
              padding-right: 1rem;
          }
      }
  
      @media screen and (min-width: 1024px) {
          .container {
              padding-top: 8rem;
          }
  
          .grid {
              grid-template-columns: 1fr 2fr;
          }
  
          .text-box {
              padding: 16px;
          }
      }
  
      @media screen and (max-width: 767px) {
          padding-top: 6rem;
      }
  }
  
  /* Mobile - 360px */
  @media only screen and (min-width: 0em) {
      :root {
          --topperFontSize: clamp(0.8125rem, 1.6vw, 1rem);
          --headerFontSize: clamp(1.9375rem, 4.5vw, 3.0625rem);
          --bodyFontSize: 1rem;
          --sectionPadding: clamp(3.75em, 7.82vw, 6.25em) 1rem;
      }
  
      .container {
          max-width: 2500px;
          margin: 0 auto;
          padding: 32px 32px 48px;
      }
      .grid {
          display: grid;
          gap: 16px;
      }
      .text-box {
          background-color: #554F4F;
          padding: 40px;
          border-radius: 16px;
          display: flex;
          flex-direction: column;
          justify-content: space-between;
      }
      .text-box h2 {
          font-size: 1.5rem;
          line-height: 1.5;
          color: white;
          margin-top: 48px;
      }
      form {
          background-color: #f6f6f6;
          padding: 40px;
          border-radius: 16px;
      }
      .form-grid {
          display: grid;
          gap: 24px;
      }
      label {
          display: block;
          font-size: 0.875rem;
          font-weight: 600;
          color: #666666;
          margin-bottom: 10px;
      }
      input, textarea {
          width: 100%;
          padding: 8px 14px;
          border: 1px solid #cecece;
          border-radius: 6px;
          font-size: 0.875rem;
          color: #9a9a9a;
      }
      input:focus, textarea:focus {
          outline: none;
          border-color: #cecece;
          box-shadow: 0 0 0 2px rgba(34, 197, 94, 0.2);
      }
      .optional {
          font-size: 0.875rem;
          color: #cdcdcd;
      }
      button {
          margin-top: 40px;
          padding: 12px 16px;
          background-color: var(--primary);
          color: #000;
          border: none;
          border-radius: 6px;
          font-size: 1rem;
          font-weight: 500;
          cursor: pointer;
          transition: background-color 0.3s, color 0.3s;
      }

      button:hover {
          background-color: #cecece;
          color: #000;
      }
  }
  
  @media (min-width: 640px) {
      .form-grid {
          grid-template-columns: repeat(2, 1fr);
      }
      .full-width {
          grid-column: span 2;
      }
  }
  
  @media (min-width: 1024px) {
      .container {
          padding-top: 64px;
      }
      .grid {
          grid-template-columns: 1fr 2fr;
      }
      .text-box, form {
          padding: 64px;
      }
      .text-box h2 {
          margin-top: 0;
      }
  }
  
  /* Dark Mode */
  @media only screen and (min-width: 0em) {
      body.dark-mode {
          #cs-contact {
              .cs-text,
              .cs-title {
                  color: var(--bodyTextColorWhite);
              }
  
              .cs-topper {
                  color: var(--primaryLight);
              }
  
              #cs-form {
                  label,
                  input,
                  textarea {
                      color: var(--bodyTextColorWhite);
                      background-color: transparent;
  
                      &::placeholder {
                          filter: brightness(1.4);
                      }
                  }
              }
  
              .cs-bg-picture {
                  background-color: #000;
  
                  img {
                      opacity: 0.5;
                  }
              }
          }
      }
  }
  </style>