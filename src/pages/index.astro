---
import BaseLayout from "src/layouts/BaseLayout.astro";
import CTA from "@components/CTA.astro";
---

<BaseLayout
  title="Home page - RideKola | eBikes for equitable communities | Melbourne, VIC"
  description="The eBike that doesn't cost the earth"
>
  <section id="hero-1969">
    <div class="cs-container">
      <div class="cs-content">
        <h2 class="cs-title">The eBike that doesn't cost the earth</h2>
        <div class="cs-flex">
          <p class="cs-text">
            Our upcycled, fully equipped city eBikes, enhance lives, and deliver cleaner, more equitable communities
          </p>
        </div>
      </div>
    </div>

    <div class="cs-wrapper">
      <picture class="cs-picture">
        <source
          media="(max-width: 600px)"
          srcset="/assets/images/hero-m.webp"
        />
        <source media="(min-width: 601px)" srcset="/assets/images/hero.jpg" />
        <img
          aria-hidden="true"
          decoding="async"
          src="/assets/images/hero.jpg"
          alt="hand painted scene showing RideKola bike parked in streetscape"
          width="1056"
          height="722"
          loading="eager"
        />
      </picture>
      <div class="credit">Artist credit: <a href="https://www.kjoud.com/" target="_blank">Oud Art</a></div>
    </div>
  </section>


</BaseLayout>

<style lang="less">

#hero-1969 {
    padding: var(--sectionPadding);
    padding-top: clamp(7rem, 10vw, 12.5rem);
    overflow: hidden;
    position: relative;
    z-index: 1;

    .cs-container {
        width: 90%;
        max-width: 2500px;
        margin: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: clamp(3rem, 6vw, 4rem);
        position: relative;
        z-index: 1;
        padding-bottom: 4rem;
    }

    .cs-content {
        text-align: left;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        position: relative;
        z-index: 1;
    }

    .cs-title {
        max-width: 30ch;
        text-wrap: balance;
    }

    .cs-flex {
        max-width: 960px;
    }

    .cs-text {
        max-width: 100%;
        text-align: right;
        text-wrap: pretty;
    }

    .cs-wrapper {
        width: 100vw;
        margin-left: 50%;
        transform: translateX(-50%);
        max-width: 90%;
        box-sizing: border-box;
        // height: 60vh;
        padding: 0 0;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        z-index: 1;
    }


    .cs-picture {
        width: 100%;
        height: auto;
        object-fit: contain;
        overflow: hidden;
        display: block;
        position: relative;
        z-index: -2;

        img {
            width: 100%;
            // height: auto;
            object-fit: cover;
            border: solid 0.2rem var(--bodyTextColor);
            border-radius: 2rem;
            // transform: translateY(-37.5%);
            // display: block;
        }
    }
  }

/* Tablet - 768px */
@media only screen and (max-width: 48rem) {
    #hero-1969 {

    .cs-content {
          flex-direction: column;
          justify-content: space-between;
          align-items: center;
          gap: 2rem;
      }
      
      .cs-title {
        text-wrap: balance;
        font-size: 2rem;
      }

      .cs-text {
          max-width: 100%;
          text-align: left;
      }

      .cs-wrapper {
          padding: 0 0;
          width: 100vw;
          // margin-left: 50%;
          // transform: translateX(-50%);
          align-items: flex-end;
      }
    }
}

/* Large Desktop - 1300px */
@media only screen and (min-width: 81.25rem) {
    #hero-1969 {
        .cs-title {
            margin: 0;
        }

        .cs-container {
            max-width: 2500px;
        }

        .cs-content {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            gap: 4rem;
        }

        .cs-flex {
            width: 50%;
            max-width: 960px;
        }

        .cs-wrapper {
            padding: 0;
        }
    }
}
</style>
